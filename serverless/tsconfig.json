{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "types": [
    "express",
    "mongoose",
    "morgan",
    "body-parser",
    "compression",
    "helmet"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
