{
  "name": "wah-serverless",
  "version": "1.0.0",
  "description": "The serverless version of WAH",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production npm run serve",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets && npm run add-build-to-zip",
    "serve": "node dist/app.js",
    "watch-node": "nodemon dist/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/app.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "add-build-to-zip": "rm build.zip; zip -r build.zip  dist/ package.json package-lock.json tslint.json jest.config.js src/ tsconfig.json .env"
  },
  "author": "Jonas Munthe Fl√∏nes",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.387.0",
    "aws-serverless-express": "^3.3.5",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "express": "^4.16.2",
    "mysql": "^2.16.0",
    "promise-throttle": "^1.0.0",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "url-loader": "^1.1.2"
  },
  "devDependencies": {
    "@types/async": "^2.0.45",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.35",
    "@types/express": "^4.16.0",
    "@types/mysql": "^2.15.5",
    "@types/node": "^9.4.6",
    "@types/request": "^2.47.0",
    "@types/request-promise": "^4.1.42",
    "angular2-template-loader": "^0.6.2",
    "concurrently": "^3.5.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "serverless-offline": "^4.0.0",
    "serverless-plugin-typescript": "^1.1.5",
    "shelljs": "^0.8.3",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.4",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^3.2.2",
    "webpack": "^4.28.4",
    "webpack-dev-server": "^3.1.14"
  }
}
